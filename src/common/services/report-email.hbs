        .kpi-label { font-size: 14px; color: #64748b; font-weight: 500; text-transform: uppercase; letter-spacing: 0.5px; }
        .progress-section { background: #f8fafc; padding: 24px; border-radius: 8px; margin: 20px 0; }
        .progress-title { font-size: 18px; font-weight: 600; color: #1e293b; margin-bottom: 16px; }
        .progress-bar { background: #e2e8f0; height: 12px; border-radius: 6px; overflow: hidden; }
