        .performance-name { font-weight: 600; color: #1e293b; font-size: 16px; }
        .performance-stats { display: flex; gap: 16px; font-size: 14px; color: #64748b; }
        .performance-stat { display: flex; align-items: center; gap: 4px; }
        .stat-dot { width: 8px; height: 8px; border-radius: 50%; }
        .stat-dot.completed { background: #10b981; }
        .stat-dot.progress { background: #f59e0b; }
        .stat-dot.todo { background: #64748b; }
        .footer { background: #1e293b; color: white; padding: 30px; text-align: center; }
